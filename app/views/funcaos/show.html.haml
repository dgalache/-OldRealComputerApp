- model_class = Funcao
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:tipo) + ':'
  %br
  = @funcao.tipo
%p
  %strong= model_class.human_attribute_name(:salario) + ':'
  %br
  = @funcao.salario
%p
  %strong= model_class.human_attribute_name(:ch) + ':'
  %br
  = @funcao.ch


= link_to t('.back', :default => t("helpers.links.back")), funcaos_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_funcao_path(@funcao), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), funcao_path(@funcao), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
