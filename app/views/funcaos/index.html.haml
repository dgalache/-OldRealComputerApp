- model_class = Funcao
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:tipo)
      %th= model_class.human_attribute_name(:salario)
      %th= model_class.human_attribute_name(:ch)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @funcaos.each do |funcao|
      %tr
        %td= link_to funcao.id, funcao_path(funcao)
        %td= funcao.tipo
        %td= funcao.salario
        %td= funcao.ch
        %td=l funcao.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_funcao_path(funcao), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), funcao_path(funcao), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_funcao_path, :class => 'btn btn-primary'
